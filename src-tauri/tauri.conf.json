{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "bloxel",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": false,
        "ask": false,
        "confirm": true,
        "message": true,
        "open": false,
        "save": true
      },
      "window": {
        "all": true,
        "setFullscreen": true,
        "close": true
      },
      "fs": {
        "all": false,
        "writeFile": true
      }
    },
    "windows": [
      {
        "title": "bloxel",        
        "fullscreen": false,
        "fileDropEnabled": false,
        "minHeight": 240,
        "minWidth": 360,
        "width": 960,
        "height": 640
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.bloxel",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}